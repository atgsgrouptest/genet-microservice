FROM python:3.11-slim

# Install system dependencies for Chromium (headless)
RUN apt-get update && apt-get install -y \
    chromium \
    libnss3 \
    libatk-bridge2.0-0 \
    libxss1 \
    libasound2 \
    libxshmfence1 \
    libgbm1 \
    libgtk-3-0 \
    libdrm2 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxrandr2 \
    libpangocairo-1.0-0 \
    libatspi2.0-0 \
    libwayland-client0 \
    libwayland-cursor0 \
    libwayland-egl1 \
    wget \
    unzip \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Environment
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

# Install Python deps
COPY requirement.txt .
RUN pip install  -r requirement.txt

# Install Playwright + dependencies
RUN pip install  playwright && playwright install --with-deps

# Copy app source code
COPY . .

# Expose FastAPI port only
EXPOSE 5000

# Start the app (assumes FastAPI + Uvicorn or custom server in start.sh)
CMD ["/start.sh"]
